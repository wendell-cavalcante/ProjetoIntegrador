<UserControl x:Class="PIProjetpCards.Screens.FrontSide"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PIProjetpCards.Screens"
             mc:Ignorable="d" 
             d:DesignHeight="900"
             d:DesignWidth="900">



    <Grid>

        <Border Background="Transparent" 
                Margin="10">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>
        </Border>

        <!-- // Fundo // -->



        <Border x:Name="FrontSide1"
                CornerRadius="55" Margin="10,0,10,10" RenderTransformOrigin="0.497,0.">

            <Border.Background>

                <VisualBrush>

                    <VisualBrush.Visual>

                        <Canvas>


                            <Border x:Name="Front_Side"
                                    Height="500"
                                    Width="500"
                                    Background="#8e54b9"
                                    Opacity="1">




                            </Border>


                        </Canvas>

                    </VisualBrush.Visual>


                </VisualBrush>

            </Border.Background>
            <TextBox x:Name="txtFrontSide"
                     HorizontalAlignment="Center" 
                     Height="500" Margin="0,55,0,0" 
                     FontSize="30"
                     TextWrapping="Wrap" 
                     Text="TextBox"
                     VerticalAlignment="Top" 
                     Width="800"/>



        </Border>



    </Grid>
</UserControl>

